<script>
  document.querySelectorAll('.focal-item').forEach((item) => {
    item.addEventListener('click', () => {
      // Remove active class from all items
      document.querySelectorAll('.focal-item').forEach((item) => {
        item.classList.remove('active');
      });

      // Add active class to the clicked item
      item.classList.add('active');
    });
  });
</script>
