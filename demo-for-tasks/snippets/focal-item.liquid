{% style %}
  .focal-item {
    width: 51px;
    height: 51px;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }
  .focal-item .focal-outer {
    background-color: #fff;
    border-width: 2px;
    border-color: transparent;
  }
  .focal-item.active .focal-outer {
    border-color: #27272a;
  }
  .focal-item.active .focal-inner {
    /* background-color: #27272a; */
    opacity: 1;
  }
  .focal-outer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    transform-origin: center;
  }
  .focal-inner {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 10;
    background: #fff;
  }
  .focal-outer:hover,
  .focal-outer:focus {
    transform: scale(1.25);
    transition: transform 0.5s ease-in-out;
  }

  .focal-outer {
    display: block !important;
    border-radius: 50%;
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    transform-origin: center;
    transition-duration: 0.5s;
    -webkit-animation: scaleAnimation 1s ease-out;
    -webkit-animation-iteration-count: infinite;
    opacity: 0;
  }
  @keyframes scaleAnimation {
    0% {
      -webkit-transform: scale(0.1, 0.1);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      -webkit-transform: scale(1.2, 1.2);
      opacity: 0;
    }
  }
{% endstyle %}
