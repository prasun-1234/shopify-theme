{{ 'section-new-arrivals.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}

<div class="page-width">
  <h2>New Arrivals</h2>
  <div class="swiper newArrivals demo-custom-pagination">
    <div class="swiper-wrapper">
      {% paginate section.settings.collection.products by 8 %}
        {% for product in section.settings.collection.products %}
          <div class="swiper-slide">
            {% render 'card-product', card_product: product, section_id: section.id %}
          </div>
        {% endfor %}
      {% endpaginate %}
    </div>
    <div class="swiper-button-next">
      <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12" fill="none">
        <path d="M1.5 5.25C1.08579 5.25 0.75 5.58579 0.75 6C0.75 6.41421 1.08579 6.75 1.5 6.75L1.5 5.25ZM17.0303 6.53033C17.3232 6.23744 17.3232 5.76256 17.0303 5.46967L12.2574 0.696699C11.9645 0.403806 11.4896 0.403806 11.1967 0.696699C10.9038 0.989592 10.9038 1.46447 11.1967 1.75736L15.4393 6L11.1967 10.2426C10.9038 10.5355 10.9038 11.0104 11.1967 11.3033C11.4896 11.5962 11.9645 11.5962 12.2574 11.3033L17.0303 6.53033ZM1.5 6.75L16.5 6.75V5.25L1.5 5.25L1.5 6.75Z" fill="#313131"/>
      </svg>
    </div>
    <div class="swiper-button-prev">
      <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="12" viewBox="0 0 18 12" fill="none">
        <path d="M16.5 6.75C16.9142 6.75 17.25 6.41421 17.25 6C17.25 5.58579 16.9142 5.25 16.5 5.25V6.75ZM0.96967 5.46967C0.676777 5.76256 0.676777 6.23744 0.96967 6.53033L5.74264 11.3033C6.03553 11.5962 6.51041 11.5962 6.8033 11.3033C7.09619 11.0104 7.09619 10.5355 6.8033 10.2426L2.56066 6L6.8033 1.75736C7.09619 1.46447 7.09619 0.989593 6.8033 0.696699C6.51041 0.403806 6.03553 0.403806 5.74264 0.696699L0.96967 5.46967ZM16.5 5.25L1.5 5.25V6.75L16.5 6.75V5.25Z" fill="#313131"/>
      </svg>
    </div>
    <div class="swiper-pagination new-arrival-pagination"></div>
  </div>
</div>
{% schema %}
{
  "name": "New arrivals",
  "tag": "section",
  "class": "new-arrivals-custom",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ]
}
{% endschema %}
<script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
{% javascript %}
  document.addEventListener('DOMContentLoaded', () => {
    const newArrivals = new Swiper('.newArrivals', {
      slidesPerView: 1,
      spaceBetween: 10,
      pagination: {
        el: '.swiper-pagination',
        clickable: true,
      },
      navigation: {
        nextEl: '.swiper-button-next',
        prevEl: '.swiper-button-prev',
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        768: {
          slidesPerView: 3,
          spaceBetween: 40,
        },
        1024: {
          slidesPerView: 4,
          spaceBetween: 50,
        },
      },
    });
  });
{% endjavascript %}
