<button
  data-wrapper="{{ wrapper }}"
  type="{% if type == 'submit' %}submit{% else %}button{% endif %}"
  {{ attr }}
  aria-label="{{ label }}"
  class="{{ class }} flex btn-main items-center justify-center py-[12px] px-[32px] font-semibold duration-300 ease-in-out overflow-hidden group/btn-secondary btn-secondary h-[48px]"
>
  <span class="overlay"></span>
  <span class="text">
    {{ src }}
    {% if icon != blank %}
      <span class="pl-4 relative">
        {% for i in (1..2) %}
          {% liquid
            if forloop.index == 1
              assign class = 'absolute top-0 left-0 opacity-0 group-hover/btn-secondary:left-6 group-hover/btn-secondary:opacity-100 duration-300 w-[20px] h-[16px] ease-in-out stroke'
            else
              assign class = 'group-hover/btn-secondary:opacity-0 group-hover/btn-secondary:translate-x-10 duration-300 ease-in-out stroke w-[20px] h-[16px]'
            endif
          %}

          <span>
            <img
              src="{{ icon | asset_url }}"
              alt="icon"
              width="100"
              height="100"
              loading="lazy"
              class="{{ class }}"
            >
          </span>
        {% endfor %}
      </span>
    {% else %}

    {% endif %}
  </span>
</button>
