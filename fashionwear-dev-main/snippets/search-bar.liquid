{% style %}
  .search_bar_main #close-btn::before {
    background: var(--body-background);
  }
{% endstyle %}
<div
  class="search_bar_main hidden h-full w-full z-[399] bg-[#00000060] fixed lg:absolute left-0 top-0 lg:top-full md:overflow-y-visible overflow-y-auto"
  id="search-bar"
>
  <div class="h-fit ml-auto duration-150 ease-in-out search_inner bg-header">
    <div class="{% if settings.container == 'boxed' %} container {% else %} container-fluid {% endif %} mx-auto">
      <div class="flex flex-col items-center sm:px-0 mt-[-1px]">
        <form action="{{ routes.search_url }}" method="get" class="w-full px-2 md:px-4 md:py-7 py-4">
          <div class="flex items-center justify-between md:flex-row flex-col-reverse gap-5">
            <div class="relative flex justify-center items-center search-box w-full input_secondary">
              <input
                @change="$dispatch('search-updated')"
                type="text"
                name="q"
                placeholder="Search"
                id="searchInputField"
                class="search-input w-full !bg-transparent py-4 px-5 block leading-tight z-20 relative"
              >
              <button type="submit" class="absolute right-4 z-20">
                {% render 'icon-search', class: 'stroke w-5 h-5' %}
              </button>
            </div>
            <button type="button" class="flex items-center gap-2 shrink-0" id="close-btn">
              {% render 'icon-close-btn', class: 'w-4 h-4 stroke cursor-pointer shrink-0' %}
              {% render 'hover-link', src: 'Close', id: 'close-btn' %}
            </button>
          </div>
          <div
            class="grid grid-cols-1 xs:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 xl:gap-10 gap-5 max-h-[400px] md:max-h-[450px] lg:max-h-[520px] 2xl:max-h-[600px] ease-in-out duration-500 overflow-auto"
            id="search_results"
          ></div>
        </form>
      </div>
    </div>
  </div>
</div>
