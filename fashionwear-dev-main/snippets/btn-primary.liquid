<button
  {{ attr }}
  type="{% if type == 'submit' %}submit{% else %}button{% endif %}"
  class="{{ class }} flex btn-main items-center justify-center py-[12px] px-[32px] font-semibold duration-300 ease-in-out overflow-hidden group/btn-primary btn-primary h-[48px]"
>
  <span class="overlay"></span>
  <span class="text">
    {{ src }}
    {% if icon != blank %}
      <span class="pl-4 relative">
        {% for i in (1..2) %}
          {% liquid
            if forloop.index == 1
              assign imgClass = 'absolute top-0 left-0 opacity-0 group-hover/btn-primary:left-6 group-hover/btn-primary:opacity-100 transiton  w-[24px] h-[24px] duration-300 ease stroke'
            else
              assign imgClass = 'group-hover/btn-primary:opacity-0 group-hover/btn-primary:translate-x-16 duration-300 ease-in-out  w-[24px] h-[24px] stroke'
            endif
          %}

          <span>
            <img src="{{ icon | asset_url }}" alt="icon" width="100" height="100" loading="lazy" class="{{ imgClass }}">
          </span>
        {% endfor %}
      </span>
    {% else %}

    {% endif %}
  </span>
</button>
