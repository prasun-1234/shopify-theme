{% style %}
  @media only screen and (max-width: 980px) {
    #about-us {
      margin-top: {{ section.settings.margin_top | divided_by: 2 }}px !important;
      margin-bottom: {{ section.settings.margin_bottom | divided_by: 2 }}px !important;
    }
  }

  @media only screen and (max-width: 1023px)  {
  .heading{
    align-items: center;
  }
  }


  @media only screen and (min-width: 1920px)  {
    .text_area{
    padding-left: 10rem;
  }
  }

  @media only screen and (max-width: 1280px)  {
    .text_area{
    padding-left: 6rem;
  }
  }

  @media only screen and (max-width: 1279px)  {
    .text_area{
    padding-left: 0rem;
  }
  }


{% endstyle %}

<section
  class="{% if settings.container == 'boxed' %}container{% else %}container-fluid{% endif %}"
  id="about-us"
  style="margin-bottom: {{ section.settings.margin_bottom }}px; margin-top: {{ section.settings.margin_top }}px;"
>
  <div class="relative  flex xl:flex-row flex-col items-center gap-10 2xl:h-[800px] xl:h-[600px]">
    <div class="text_area relative  z-10 flex flex-col gap-[15px] text-center xl:items-start items-center w-full xl:px-[15px] heading xl:text-left">
      
            <h2 class="leading-none">{{ page.title }}</h2>
            <p class="xl:w-4/12 lg:w-1/2 md:w-9/12 w-full">
              {{ page.content }}
            </p>
    </div>
    <div class="flex xl:absolute relative  xl:top-0 xl:left-0 w-full h-full justify-end">
      <div class="xl:w-3/5 w-full">
        {% if section.settings.image %}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag:
              loading: 'lazy',
              sizes: '100',
              widths: '165, 360, 535, 750, 1070, 1500',
              class: 'object-cover 2xl:h-[800px] sm:h-[600px] h-[400px]'
          }}
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'w-full h-full bg-[#ccc]' }}
        {% endif %}
      </div>
    </div>
  </div>

  <div class="flex justify-center items-center text-center xl:mt-20 mt-10 {% if settings.container == 'boxed' %}{% else %}container mx-auto{% endif %}">
    <h3>{{ section.settings.text_content }}</h3>
  </div>
</section>

{% schema %}
  {
    "name": "t:section.about-us.name",
    "settings": [
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 80,
        "step": 10,
        "unit": "px",
        "label": "t:section.about-us.settings.margin_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 80,
        "step": 10,
        "unit": "px",
        "label": "t:section.about-us.settings.margin_bottom",
        "default": 40
      },
      {
            "type": "image_picker",
            "id": "image",
            "label": "t:section.about-us.settings.image.label"
      },
      {
        "type": "text",
        "id": "text_content",
        "label": "t:section.about-us.settings.text_content",
        "default": "Faucibus pulvinar elementum integer enim neque volutpat. Vel pretium lectus quam id leo in vitae turpis massa."
      }
    ],
    "presets": [
      {
        "name": "t:section.about-us.presets.name",
        "settings": {
          "margin_top": 60,
          "margin_bottom": 0,
          "image": ""
        }
      }
    ]
  }
{% endschema %}
