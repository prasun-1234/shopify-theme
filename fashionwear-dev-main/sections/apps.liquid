<div class="{% if section.settings.include_padding %}py-[40px]{% endif %}">
  {% for block in section.blocks %}
    {% render block %}
  {% endfor %}
</div>
{% schema %}
{
  "name": "t:section.apps.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_padding",
      "default": true,
      "label": "t:section.apps.settings.include_padding"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "t:section.apps.presets.name"
    }
  ]
}
{% endschema %}
