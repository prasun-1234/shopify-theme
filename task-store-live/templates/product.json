{
  "sections": {
    "breadcrumb": {
      "type": "breadcrumb",
      "settings": {
        "section_margin_top": 40,
        "section_margin_bottom": 20,
        "text_color": "#CBD5E1"
      }
    },
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "product_tags": {
          "type": "product_tags",
          "settings": {
            "tags_limit": 7
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": true
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "product_tags",
        "description",
        "price",
        "buy_buttons",
        "share"
      ],
      "settings": {
        "task_layout": true,
        "enable_sticky_info": true,
        "color_scheme": "background-1",
        "media_size": "large",
        "constrain_to_viewport": true,
        "media_fit": "contain",
        "gallery_layout": "stacked",
        "media_position": "right",
        "image_zoom": "lightbox",
        "mobile_thumbnails": "hide",
        "hide_variants": true,
        "enable_video_looping": false,
        "padding_top": 40,
        "padding_bottom": 0
      }
    },
    "product_info_grid": {
      "type": "product_info_grid",
      "settings": {
        "margin_top": 80,
        "margin_bottom": 80,
        "bg_color": "#0f172a",
        "content_color": "#ffffff"
      }
    },
    "related-products": {
      "type": "related-products",
      "settings": {
        "heading": "Related Tasks",
        "heading_size": "h2",
        "accent_color_1": "#FB923C",
        "accent_color_2": "#BBF7D0",
        "products_to_show": 3,
        "columns_desktop": 3,
        "color_scheme": "background-1",
        "image_ratio": "square",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 28
      }
    },
    "newsletter": {
      "type": "newsletter",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "New era of design & development starts now"
          }
        },
        "paragraph": {
          "type": "paragraph",
          "settings": {
            "text": "<p>Get A Quote , put your email we will get back to you<\/p>"
          }
        },
        "email_form": {
          "type": "email_form",
          "settings": {
          }
        }
      },
      "block_order": [
        "heading",
        "paragraph",
        "email_form"
      ],
      "settings": {
        "gradient": "shopify:\/\/shop_images\/newsletter-gradient.svg",
        "color_scheme": "",
        "full_width": true,
        "padding_top": 40,
        "padding_bottom": 40
      }
    }
  },
  "order": [
    "breadcrumb",
    "main",
    "product_info_grid",
    "related-products",
    "newsletter"
  ]
}
