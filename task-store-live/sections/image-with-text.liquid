{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{% assign height = 550 %}
{% case section.settings.height %}
  {% when 'small' %}
    {% assign height = 550 %}
  {% when 'medium' %}
    {% assign height = 650 %}
  {% when 'large' %}
    {% assign height = 800 %}
  {% else %}

{% endcase %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .cover-{{ section.id }}-image{
    border-radius: 20px;
  }
  .section-{{ section.id }}-padding .image-with-text::before{
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    z-index: 1;
    pointer-events: none;
  }
  #{{ section.id }} .image-with-text{
    height:{{ height }}px;
  }
  #{{ section.id }} .image-with-text .text_inner{
    {% case section.settings.desktop_content_alignment %}
    {% when 'left' %}
      text-align:left;
      align-items:flex-start;
      {% when 'center' %}
      text-align:center;
      align-items:center;
      {% when 'right' %}
      text-align:right;
      align-items:flex-end;
      {% else %}
    {% endcase %}
  {% case section.settings.desktop_content_position %}
  {% when 'top' %}
    justify-content:flex-start;
    {% when 'middle' %}
    justify-content:center;
    {% when 'bottom' %}
    justify-content:flex-end;
    {% else %}
  {% endcase %}
  }

  .image-with-text .inner_wrapper .image_div img{
    height:calc({{ height }}px - 80px);
  }

  @media screen and (max-width:1200px){
    #{{ section.id }} .image-with-text{
      height:auto !important;
    }
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
  if section.settings.color_scheme == section.settings.section_color_scheme and section.settings.content_layout == 'no-overlap'
    assign remove_color_classes = true
  endif
-%}

<section
  class="section-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }} image_text_section"
  id="{{ section.id }}"
>
  <div class="container custome-banner-overlay">
    <div class="cover-{{ section.id }}-image image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == section.settings.section_color_scheme and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {% capture sizes %}(max-width: {{ section.settings.background.width | times: 2 }}px) 50vw, {{ settings.logo_width }}px{% endcapture %}
      {% capture widths %}{{ section.settings.background.width }}, {{ section.settings.background.width | times: 1.5 | round }}, {{ section.settings.background.width | times: 2 }}{% endcapture %}
      {{
        section.settings.background
        | image_url: width: 1000
        | image_tag: class: 'bg_img', widths: widths, sizes: sizes
      }}
      <div class="inner_wrapper">
        {% case section.settings.image_behavior %}
          {% when 'zoom-in' %}
            {% assign imageEffect = 'zoom_gsap_bg' %}
          {% when 'ambient' %}
            {% assign imageEffect = 'sprite_effect' %}
          {% when 'none' %}
            {% assign imageEffect = '' %}
          {% else %}

        {% endcase %}
        <figure
          class="image_div {{ imageEffect }}"
          {% if section.settings.layout == 'text_first' %}
            style="order:2;"
          {% endif %}
        >
          {%- if section.settings.image != blank -%}
            {%- if section.settings.image_behavior == 'ambient' or section.settings.image_behavior == 'zoom-in' -%}
              {%- assign widths = '198, 432, 642, 900, 1284' -%}
              {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
            {%- else -%}
              {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
              {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
            {%- endif -%}
            {{
              section.settings.image
              | image_url: width: 1000
              | image_tag: sizes: sizes, widths: widths, fetchpriority: fetch_priority
            }}
          {%- else -%}
            {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </figure>
        <div class="text_div">
          <div
            id="ImageWithText--{{ section.id }}"
            class="text_inner {% unless remove_color_classes %} gradient color-{{ section.settings.color_scheme }}{% else %} background-transparent{% endunless %}"
          >
            {%- for block in section.blocks -%}
              {% case block.type %}
                {%- when 'heading' -%}
                  <div {{ block.shopify_attributes }}>
                    {{ block.settings.heading }}
                  </div>

                {%- when 'caption' -%}
                  <div
                    class="image-with-text__text image-with-text__text--caption"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.caption | escape }}
                  </div>
                {%- when 'text' -%}
                  <div {{ block.shopify_attributes }} class="body-text">
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" href="{{ routes.all_products_collection_url }}"
                      {% else %}
                        href="{{ block.settings.button_link }} "
                      {% endif %}
                      class="button button_primary"
                      {{ block.shopify_attributes }}
                    >
                      {% render 'button-primary', text: block.settings.button_label | escape %} 
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

