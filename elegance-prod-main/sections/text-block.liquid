<link rel="stylesheet" href="{{ 'text-block.css' | asset_url }}">
{% style %}
  .text-block-main .color-right:hover ~ .container .text-right {
    color:{{ section.settings.desc_bg_color }} !important;
  }
  .text-block-main .color-right:hover{
    background-color:{{ section.settings.desc_text_color }} !important;
  }

  .text-block-main .color-left:hover ~ .container .text-left {
    color:{{ section.settings.bg_color }} !important;
  }
  .text-block-main .color-left:hover{
    background-color:{{ section.settings.text_color }} !important;
  }
{% endstyle %}
<section class="text-block-wrapper text-block-main">
  <span class="dark-bg color-left" style="background-color: {{ section.settings.bg_color }}"></span>
  <span class="light-bg color-right" style="background-color: {{ section.settings.desc_bg_color }}"></span>
  <div class="container ">
    <div class="text-block">
      <div class="pure-g align-center">
        <div class="pure-u-1 pure-u-md-1-2">
          <div class="l-box">
            <h3 class="text-left" style="color: {{ section.settings.text_color }}">{{ section.settings.text }}</h3>
          </div>
        </div>
        <div class="pure-u-1 pure-u-md-1-2">
          <div class="l-box">
            <h3 class="text-right" style="color:{{ section.settings.desc_text_color }}">
              {{ section.settings.desc_text }}
            </h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.text-block.name",
  "settings": [
    {
      "type": "header",
      "content": "Left Block  Settings"
    },
    {
      "type": "text",
      "id": "text",
      "label": "t:sections.text-block.text.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.text-block.text_color.label",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.text-block.bg_color.label",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "Right Block  Settings"
    },
    {
      "type": "textarea",
      "id": "desc_text",
      "label": "t:sections.text-block.desc_text.label"
    },
    {
      "type": "color",
      "id": "desc_text_color",
      "label": "t:sections.text-block.desc_text_color.label",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "desc_bg_color",
      "label": "t:sections.text-block.desc_bg_color.label",
      "default": "#000"
    }
  ],
  "presets": [
    {
      "name": "t:sections.text-block.presets.name",
      "category": "Misc"
    }
  ]
}
{% endschema %}
