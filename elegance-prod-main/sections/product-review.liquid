<link rel="stylesheet" href="{{ 'product-review.css' | asset_url }}">

<section class="review-section" id="review_main">
  <div
    class="{%- if settings.layout == 'box_layout' -%}container{% endif %}{%- if settings.layout == 'fluid_layout' -%}container-fluid{% endif %}"
  >
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1">
        <div class="l-box">
          <div
            id="shopify-product-reviews"
            class="{% if settings.enable_animation %}scrollmagic-element-fade-in-up-1{% endif %}"
            data-id="{{ product.id }}"
          >
            {{ product.metafields.spr.reviews }}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.product-review.name",
  "settings": []
}
{% endschema %}
