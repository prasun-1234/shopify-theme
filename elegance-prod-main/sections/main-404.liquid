
<link rel="stylesheet" href="{{ 'main-404.css' | asset_url }}">

<section class="error-page">
  <div
    class="{%- if settings.layout == 'box_layout' -%}container{% endif %}{%- if settings.layout == 'fluid_layout' -%}container-fluid{% endif %}"
  >
    <div class="pure-g">
      <div class="pure-u-1 pure-u-md-1-1 l-box">
        <div class="error-view">
          <div class="error-inner">
            <h2>{{ 'general.404.title' | t }}</h2>
            <p>{{ 'general.404.subtext_html' | t }}</p>
          <div class="error-page-button">
            <a rel="nofollow" href="/" class="theme-btn primary-btn"
              ><span class="btn-bg"></span><span class="btn-text">{{ 'general.404.return_store' | t }}</span></a>
            <a rel="nofollow" href="/search" class="theme-btn secondary-btn"
              ><span class="btn-overlay"></span
              ><span class="btn-text">{{ 'general.404.continue_shopping' | t }}</span></a
            >
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "t:sections.404.name",
  "settings": []
}
{% endschema %}
